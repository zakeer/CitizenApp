<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context="com.turpymobileapps.citizenapp.ReportViolation">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"

        android:text="Report Violation"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff36beff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#ff36beff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/input_bg"
        android:padding="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#ff36beff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:inputType="textMultiLine"
        android:minHeight="100sp"
        android:padding="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attach"
        android:textColor="#ff36beff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnGetPhoto"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight=".5"
            android:src="@drawable/photo_button"
            />

        <ImageView
            android:id="@+id/btnGetVideo"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight=".5"
            android:src="@drawable/video_button" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight=".5"
            android:src="@drawable/video_button"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:background="@drawable/bg_report"
        android:text="Submit with Location"
        android:textColor="#fff"
        android:textSize="13dp" />


</LinearLayout>